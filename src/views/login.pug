extends layouts/layout

block content
    .container.vh-100
        .row.h-100.justify-content-center.align-items-center.text-center
            .col-lg-8.col-xl-6
                .h1.fw-bold.mb-3.mb-lg-5 Log in to your account
                if isLoginFailed
                    .text-danger Wrong email or password
                form#loginForm.my-3(method="post" novalidate enctype="multipart/form-data")
                    .form-floating.mb-3
                        if isLoginFailed
                            input#inputLogin.form-control(type='text' name='login' minlength="2" maxlength="30" value=`${login}` required placeholder='')
                        else 
                            input#inputLogin.form-control(type='text' name='login' minlength="2" maxlength="30" required placeholder='')
                        label(for='inputLogin') Nickname or Email
                        .invalid-feedback * Please fill out this field!
                    .form-floating.mb-3
                        input#inputPassword.form-control(type='password' name='password' minlength="6" maxlength="30" pattern="(?=.*[A-Z])(?=.*[a-z])(?=.*\\\d).{6,30}" required placeholder='')
                        label(for='inputPassword') Password
                        .invalid-feedback * Please fill out this field!
                    .my-3.d-block.text-center 
                        .col-12
                            button.btn.btn-primary.btn-block.w-100.fs-5.py-2 Log In
                    .small.text-center
                        p Don't have an account? 
                            a(href="/signup") Sign Up
    script(src="/scripts/login.js" type="module")