extends layouts/main-page-layout

block content
  .col-auto.col-md-3.col-xl-2.bg-body-tertiary.p-3
    nav.nav.nav-pills.flex-column.gap-1.sticky-top(style={top: "94px"})
      a.nav-link.active.d-flex.align-items-center.text-white(href='/home')
        i.fs-4.bi-house.me-md-1
        span.ms-1.d-none.d-md-inline Home
      a.nav-link.d-flex.align-items-center.text-black(href='/chats')
        i.fs-4.bi-chat.me-md-1
        span.ms-1.d-none.d-md-inline Messages
      a.nav-link.d-flex.align-items-center.text-black(href='/settings')
        i.fs-4.bi-gear.me-md-1
        span.ms-1.d-none.d-md-inline Settings
      a.nav-link.d-flex.align-items-center.text-black(href='/user/3')
        i.fs-4.bi-person.me-md-1
        span.ms-1.d-none.d-md-inline Profile
      a.nav-link.d-flex.align-items-center.text-black(href='/contact')
        i.fs-4.bi-question-circle.me-md-1
        span.ms-1.d-none.d-md-inline Contact Us
      a.nav-link.d-flex.align-items-center.text-black(href='' data-bs-toggle='modal' data-bs-target='#adminPanel') 
        i.fs-4.bi-pencil-square.me-md-1
        span.ms-1.d-none.d-md-inline Admin panel
  .col.d-flex.flex-column.p-3
    .row 
      .col-lg-8.offset-lg-2.col-xxl-6.offset-xxl-3
        form(method="post").row.justify-content-start.align-items-center.mb-3
          .col-12.mb-2
            textarea.form-control(rows="3" placeholder='Share your thoughts ...')
          .col-auto
            label(for="inputFile" style={cursor: "pointer"})
                i.fs-5.bi-file-earmark-image
            input#inputFile.form-control(type='file' hidden)
          .col-auto
            button(type="button").btn.p-0
              i.fs-5.bi-emoji-smile
          .col-auto.ms-auto
            button.btn.btn-primary Share
        .flex-fill.pt-3
          .card.mb-3.mb-lg-4
            .card-header
              .row.align-items-center
                .col-2.col-xl-1
                  img.img-fluid.rounded-circle.me-3(width='40px' src='/avatars/default_user_avatar.jpeg' alt='')
                .col
                  .h5.m-0 Miracles Lee Cross
                  .text-muted @LeeCross
            .card-body
              .card-text Lorem ipsum dolor sit amet consectetur adipisicing elit. Quo recusandae nulla rem eos ipsa praesentium esse magnam nemo dolor sequi fuga quia quaerat cum, obcaecati hic, molestias minima iste voluptates.
            .card-footer
              .row.align-items-center
                .col
                  .nav
                    a.nav-link.d-flex.align-items-center(href='')
                      i.fs-5.bi-heart
                      span.d-none.d-md-inline.ms-2 Like
                    a.nav-link.d-flex.align-items-center(href='')
                      i.fs-5.bi-chat-left-dots
                      span.d-none.d-md-inline.ms-2 Comment
                    a.nav-link.d-flex.align-items-center(href='')
                      i.fs-5.bi-share-fill 
                      span.d-none.d-md-inline.ms-2 Share
                .col-auto
                  span 10 min ago
