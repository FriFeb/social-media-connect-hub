extends layouts/main-page-layout

block content
  .col.p-3.overflow-auto.scroll-wrapper
    .col-lg-8.offset-lg-2.col-xxl-6.offset-xxl-3
      form#contactForm.d-flex.flex-column.justify-content-center(action="http://localhost:3080/api/forms" method='post' novalidate enctype="multipart/form-data" style={"min-height": "calc(100vh - 110px)"})
        input#inputAuthor(type='text' name="authorId" value=`${user_id}` hidden)
        .mb-3.mb-md-4
          label.form-label(for='inputSubject') Subject
          input#inputSubject.form-control(type='text' name='subject' placeholder='Your subject')
        .mb-1
          label.form-label(for='inputMessage') Message *
          textarea#inputMessage.form-control(name='text' cols='30' rows='4' placeholder='Write your message')
        .mb-5
          label(for="inputFile")
          input#inputFile.form-control(type='file' name="file")
        .row.justify-content-center
          .col-md-5.text-center
            button#toastTrigger.btn.btn-block.btn-primary.py-2.px-4 Send Message
    .toast-container.position-fixed.bottom-0.end-0.p-3
      #contactToast.toast(role='alert' aria-live='assertive' aria-atomic='true')
        .toast-header 
          strong.me-auto.fs-5 Your form is sent 
          button.btn-close.fs-6(type='button' data-bs-dismiss='toast' aria-label='Close')
        .toast-body.fs-6
          | Wait until we answer the form 
          i.bi-emoji-smile

  script(src="/scripts/contact.js" type="module")